{
  "compilerOptions": {
    "composite": true,
    "target": "es2018",
    "jsx": "preserve",
    "lib": ["ESNext"],
    "baseUrl": ".",
    "rootDir": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "fomu*": ["packages/fomu/*"],
      "@fomu/components/*": ["packages/components/*"],
      "@fomu/common/*": ["packages/common/*"],
      "@fomu/utils/*": ["packages/utils/*"]
    },
    "resolveJsonModule": true,
    "types": [
      "vite/client",
      "node"
    ],
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "removeComments": false,
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },

  "include": [
    "types",
    "packages",
    "playground"
  ],
  "exclude": [
    "unocss.config.ts",
    "node_modules",
    "**/*.md",
    "**/dist"
  ]
}
