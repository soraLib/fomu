{
  "compilerOptions": {
    "target": "esnext",
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "/#/*": ["./types/*"],
      "@/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "types": ["vite/client"],
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "website/**/*.ts",
    "website/**/*.d.ts",
    "website/**/*.tsx",
    "website/**/*.vue",
    "types/**/*.d.ts"
  ]
}
